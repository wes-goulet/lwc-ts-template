{
  "name": "lwc-ts-template",
  "version": "0.0.1",
  "description": "A template for writing an LWC app in Typescript",
  "main": "src/index.ts",
  "author": "Wes Peter",
  "license": "MIT",
  "scripts": {
    "prepare": "yarn run build",
    "clean": "rm -rf ./dist && rm -rf ./no-types",
    "strip-types": "./node_modules/.bin/babel ./src --out-dir no-types --extensions '.ts' --copy-files",
    "strip-types-watch": "./node_modules/.bin/babel ./src --out-dir no-types --extensions '.ts' --copy-files --watch",
    "build": "yarn run clean && yarn run strip-types && rollup -c rollup.config.js --environment build:dev",
    "build-prod": "yarn run clean && yarn run strip-types && rollup -c rollup.config.js --environment build:prod",
    "rollup-watch": "cross-env rollup -c ./rollup.config.js --watch",
    "start": "yarn clean && concurrently \"yarn strip-types-watch\" \"yarn rollup-watch\""
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-decorators": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "@lwc/compiler": "0.34.0",
    "@lwc/engine": "0.34.0",
    "@lwc/wire-service": "0.34.0",
    "@lwc/rollup-plugin": "0.34.0",
    "@lwc/eslint-plugin-lwc": "^0.6.0",
    "rollup": "0.66.5",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-terser": "3.0.0",
    "rollup-slds-plugin": "0.0.1",
    "typescript": "^3.1.1"
  }
}
