{
  "name": "lwc-ts-template",
  "version": "0.0.1",
  "description": "A template for writing an LWC app in Typescript",
  "main": "src/index.ts",
  "author": "Wes Peter",
  "license": "MIT",
  "scripts": {
    "prepare": "npm run build",
    "clean": "rm -rf dist",
    "build": "webpack",
    "watch": "webpack --watch",
    "serve": "node ./scripts/server.js",
    "start": "run-p watch serve"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-decorators": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@lwc/compiler": "^1.0.0",
    "@lwc/engine": "^1.0.0",
    "@lwc/rollup-plugin": "^1.0.0",
    "@lwc/wire-service": "^1.0.0",
    "babel-loader": "^8.0.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.5.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "lwc"
        }
      }
    ]
  }
}
