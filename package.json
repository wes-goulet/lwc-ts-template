{
  "name": "lwc-ts-template",
  "version": "0.0.1",
  "description": "A template for writing an LWC app in Typescript",
  "main": "src/index.ts",
  "author": "Wes Peter",
  "license": "MIT",
  "scripts": {
    "prepare": "npm run build",
    "clean": "rm -rf ./dist && rm -rf ./no-types",
    "strip-types": "./node_modules/.bin/babel ./src --out-dir no-types --extensions '.ts' --copy-files",
    "strip-types-watch": "./node_modules/.bin/babel ./src --out-dir no-types --extensions '.ts' --copy-files --watch",
    "build": "npm run clean && npm run strip-types && rollup -c rollup.config.js --environment build:development",
    "build-prod": "npm run clean && npm run strip-types && rollup -c rollup.config.js --environment build:production",
    "rollup-watch": "cross-env rollup -c ./rollup.config.js --watch",
    "start": "npm run clean && concurrently \"npm run strip-types-watch\" \"npm run rollup-watch\""
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-decorators": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@lwc/compiler": "^1.0.0",
    "@lwc/engine": "^1.0.0",
    "@lwc/rollup-plugin": "^1.0.0",
    "@lwc/wire-service": "^1.0.0",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "rollup": "^1.17.0",
    "rollup-plugin-alias": "^1.5.2",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-slds-plugin": "^0.0.2",
    "typescript": "^3.5.3"
  }
}
