{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "paths": {
            "lwc": ["./../../node_modules/@lwc/engine"],
            "wire-service": ["./../../node_modules/@lwc/wire-service"],
            "wire/*": ["./src/wire/*"]
        }
    },
    "include": ["src"]
}
